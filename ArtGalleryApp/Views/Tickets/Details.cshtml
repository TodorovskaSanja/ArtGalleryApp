@model ArtGalleryApp.Models.Ticket

@{
    ViewBag.Title = "Details";
}

<body>
    <h2 class="display-3 text-success">Ticket info</h2>
    <div class="d-flex align-items-start align-content-start">
        <div class="d-inline-block col-4">
            <img src="@Model.Event.ImageURL" style="max-width: 350px; max-height: 700px;" />
        </div>
        <div>
            <h2 class="display-6 text-success">@Model.Event.Name</h2>
            <hr />
            <h4 class="text-secondary">About event</h4>
            <p>@Model.Event.Description</p>
            <hr />
            <div>
                <span><span class="fw-bold">Bought:</span> @Model.WhenBought</span>
            </div>
            <div class="mt-3">
                <img src="~/Content/Images/date.png" style="width:30px" />
                <span class="fs-6">@Model.Event.Date</span>
                <img src="~/Content/Images/time.png" class="ms-2" style="width:28px;" />
                <span class="fs-6">@Model.Event.Time</span>
                <img src="~/Content/Images/duration.png" class="ms-2" style="width:25px;" />
                <span class="fs-6">@Model.Event.Duration hours</span>
            </div>
            <div class="mt-3">
                <img src="~/Content/Images/people.png" style="width:25px;" />
                <span class="fs-6">@Model.NumTickets</span>
                <img src="~/Content/Images/price.png" class="ms-2" style="width:25px;" />
                @if (Model.Price == 0)
                {
                    <span class="fs-6">Free</span>
                    <h5 class="fw-bold mt-3">Free entry</h5>
                }
                else
                {
                    <span class="fs-6">€@Model.Event.TicketPrice</span>
                    <h5 class="fw-bold mt-3">Price: €@Model.Price</h5>
                }
            </div>
        </div>
    </div>

    <a href="/Tickets/Index/@Model.UserId" class="d-inline-block text-decoration-none text-secondary mt-3">
        <img src="~/Content/Images/left_arrow.png" style="width: 30px;" />
        <span style="font-size: 20px;">Back to tickets</span>
    </a>

    @if (TempData["alertMessage"] != null)
    {
        <div aria-live="polite" aria-atomic="true"
             class="position-fixed bottom-0 end-0 p-5" style="z-index: 9999;">
            <div id="alertToast"
                 class="toast align-items-center text-bg-success border-0"
                 role="alert"
                 aria-live="assertive"
                 aria-atomic="true"
                 data-bs-autohide="true"
                 data-bs-delay="4000">
                <div class="d-flex">
                    <div class="toast-body h6">
                        @TempData["alertMessage"]
                    </div>
                    <button type="button"
                            class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast"
                            aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
</body>

@section Scripts {
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        var toastEl = document.getElementById("alertToast");
        if (toastEl) {
            var toast = new bootstrap.Toast(toastEl);
            toast.show();
        }
    });
    </script>
}